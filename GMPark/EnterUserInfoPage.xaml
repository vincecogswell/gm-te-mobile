<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GMPark.EnterUserInfoPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Padding="10,10,10,10">
				<Label Text="Enter your full name" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Margin="0,10,0,0"></Label>
				<Entry Placeholder="e.g. Johnny Appleseed"></Entry>
				<Label Text="Enter your email address" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Margin="0,10,0,0"></Label>
				<Entry Placeholder="e.g. example@email.com"></Entry>
				<Label Text="What building do you work at?" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Margin="0,10,0,0"></Label>
				<Picker>
					<Picker.Items>
						<x:String>Design Building</x:String> 
            			<x:String>Design Dome</x:String>
					</Picker.Items>
				</Picker>
				<Label Text="What time do you come into work?" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" Margin="0,10,0,0"></Label>
				<TimePicker></TimePicker>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
